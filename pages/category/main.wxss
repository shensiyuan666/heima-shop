.cateList{
  display: flex;
  height: 100vh;
}
.cateList .leftMuneList{
  flex:2;
  border-right: 2rpx solid #ccc;
}
.cateList .leftMuneList .muneTitle{
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #ccc;
}
.activeSelect{
  color: var(--themeColor);
  border-left:5rpx solid currentColor;
}
.cateList .rightContent{
  flex:5;
}

.rightContent{
  height: 100%;
}

.rightContent .cate_title{
   font-size: 40rpx;
   text-align: center;
   margin: 50rpx 0;
}

.rightContent .cate_content{
   display: flex;
   flex-wrap: wrap;
}
.rightContent .cate_content .cate_item{
   text-align: center;
   padding: 10rpx 0;
   width: 33.33%;
}
.rightContent .cate_content .cate_item image{
   width: 80%;
}
.rightContent .cate_content .cate_item .cate_text{
    font-size: 24rpx;
}
