page{
  padding-bottom: 90rpx;
}
.addressContainer{
  padding: 30rpx;
}
.addressContainer button{
    font-weight: 400;
    font-size: 30rpx;
}
.address_info{
  display: flex;
  justify-content: space-around;
}
