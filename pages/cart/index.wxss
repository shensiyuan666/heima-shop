.cart_title{
  font-size: 40rpx;
  padding: 20rpx;
  border-top: 3rpx solid var(--themeColor);
  border-bottom: 3rpx solid var(--themeColor);
}
.goods_list{
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  padding: 30rpx;
}
.goods_item{
  display: flex;
}
.goods_item .goods_image{
  flex:1;
}
.goods_item .goods_intro{
  flex:2;
}

.goods_item .goods_image image{
  width: 100%;
}

.goods_item .goods_intro{
  margin-left: 50rpx;
}

.goods_item .goods_intro .goods_title{
  margin-bottom: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_item .goods_intro .goods_calculate {
  display: flex;
  justify-content: space-between;
}
.goods_item .goods_intro .goods_calculate .goods_price{
  color:var(--themeColor);
  font-size:34rpx;
}
.goods_item .goods_intro .goods_calculate .goods_amount{
  display: flex;
  justify-content: center;
  align-items: center;
}
.goods_item .goods_intro .goods_calculate .goods_amount view{
  width: 55rpx;
  height: 55rpx;
  border:1rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.totalPriceBar{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  padding: 10rpx 0  0 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}
.totalPriceBar .checkAll{
  display: flex;
  justify-content: center;
  align-items: center;
}
.totalPriceBar .totalPrice{
  display: flex;
}

.totalPrice .price{
  font-size: 40rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.totalPrice .fee{
  font-size: 24rpx;
  text-align: center;
}
.totalPrice .payment{
    background-color: var(--themeColor);
    color: #fff;
    font-size: 34rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx;
    margin-left: 10rpx;
}